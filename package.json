{
  "name": "voicevox-tools",
  "displayName": "voicevox-tools",
  "description": "voicevox用の原稿を作成する際に使えるツールです。",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "voicevox-tools.addTextToSelection",
        "title": "addTextToSelection"
      },
      {
        "command": "voicevox-tools.addTextToSelectionWithLine",
        "title": "addTextToSelectionWithLine"
      },
      {
        "command": "voicevox-tools.deleteCharacterNameFromSelection",
        "title": "deleteCharacterNameFromSelection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "voicevox-tools.addTextToSelection",
          "group": "navigation"
        },
        {
          "when": "editorTextFocus",
          "command": "voicevox-tools.addTextToSelectionWithLine",
          "group": "navigation"
        },
        {
          "when": "editorTextFocus",
          "command": "voicevox-tools.deleteCharacterNameFromSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "icon": "icon/icon.jpg",
  "publisher": "AmanesCode",
  "repository": {
    "type": "git",
    "url": "https://github.com/AmanesCode/voicevox-tools.git"
  },
  "licence": "MIT",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "ts-loader": "^9.4.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "@vscode/test-electron": "^2.3.4"
  }
}
